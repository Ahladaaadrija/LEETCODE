class Solution(object):
    def mergeAlternately(self, word1, word2):
        new = []
        j = i = 0
        while i<len(word1) or j<len(word2):
            if i < len(word1):
                new.append(word1[i])
                i = i + 1
            if j < len(word2):
                new.append(word2[j])
                j = j + 1
                    
        s = "".join(new)
        return s
            
            
